{
    "name": "php-quartz/quartz",
    "type": "library",
    "minimum-stability": "dev",
    "description": "Job Time Scheduler Library",
    "keywords": ["job", "time", "task", "time scheduler", "quartz", "chrono"],
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "ramsey/uuid": "^2|^3.5",
        "g4/cron": "^0.1",
        "symfony/event-dispatcher": "^3.4|^4"
    },
    "require-dev": {
        "makasim/yadm": "^0.5.7",
        "makasim/values": "^0.5.2",
        "phpunit/phpunit": "^5.5"
    },
    "suggest": {
        "php-quartz/bridge": "Provides a Yadm storage, Enqueue integration and other extension."
    },
    "autoload": {
        "psr-4": { "Quartz\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2.x-dev"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
